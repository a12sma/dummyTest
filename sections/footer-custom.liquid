{{ 'footer-custom.css' | asset_url | stylesheet_tag }}

<footer class="footer-cust">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <img
          src="{{ section.settings.image | image_url: width: 220 }}"
          alt="Footer Image"
          class="footer-cust__logo">
      </div>
      <div class="col-lg-8">asma</div>
    </div>
  </div>
</footer>


{% schema %}
  {
    "name": "Footer Custom",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Footer Custom"
      }
    ]
  }
{% endschema %}